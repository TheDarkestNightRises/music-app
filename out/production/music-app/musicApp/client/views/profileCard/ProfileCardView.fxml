            <ImageView fx:id="profilePicture" fitHeight="70.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/user.png" />
               </image>
            </ImageView>
         </graphic>
      </Hyperlink>
      <Hyperlink mnemonicParsing="false" onAction="#openProfile">
         <graphic>
            <Label fx:id="profileName" prefHeight="27.0" prefWidth="247.0" text="Emanuel-Dan Acalfoaie" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </graphic>
      </Hyperlink>
   </children>
</HBox>
